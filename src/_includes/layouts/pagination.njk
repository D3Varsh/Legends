<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }}</title>
    <link rel="stylesheet" href="/_includes/css/style.css">
</head>
<body>
    {% include "partials/header.njk" %}

    <main>
        <div class="container">
            <h1>{{ title }}</h1>

            <!-- Players List -->
            <ul>
                {% for player in pagination.items %}
                    <li>
                        <a href="{{ player.url }}">
                            {{ player.title }}
                        </a>
                    </li>
                {% endfor %}
            </ul>

        </div>

        <!-- Pagination -->
        <div class="pagination">
            {% if pagination.href.previous %}
                <a href="{{ pagination.href.previous }}" class="pagination-link">Previous</a>
            {% else %}
                <span class="pagination-disabled">Previous</span>
            {% endif %}

            <!-- Page Numbers -->
            {% for page in pagination.pages %}
                <a href="{{ page.href }}" class="pagination-link{% if page.active %} active{% endif %}">
                    {{ page.number }}
                </a>
            {% endfor %}

            {% if pagination.href.next %}
                <a href="{{ pagination.href.next }}" class="pagination-link">Next</a>
            {% else %}
                <span class="pagination-disabled">Next</span>
            {% endif %}
        </div>
    </main>

    {% include "partials/footer.njk" %}
</body>
</html>
